@Animation =
  scale:
    in:
      start: 'animating scale in visible active'
      end: 'visible active'
      remove: 'animating scale in'
    out:
      start: 'animating scale out visible active'
      end: 'hidden'
      remove: 'animating scale out'
  fade:
    in:
      start: 'animating fade in visible active'
      end: 'visible active'
      remove: 'animating fade in'
    out:
      start: 'animating fade out visible active'
      end: 'hidden'
      remove: 'animating fade out'